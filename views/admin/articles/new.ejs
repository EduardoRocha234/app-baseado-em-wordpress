<%- include('../../partials/header.ejs') %> <%-
include('../../partials/navbar.ejs') %>

<div class="container">
  <br />
  <div class="card">
    <div class="card-header">
      <h2>Novo Artigo</h2>
    </div>
    <div class="card-body">
      <form method="post" action="/articles/save">
        <label>Titulo: </label>
        <input
          class="form-control"
          type="text"
          name="title"
          placeholder="Defina o tÃ­tulo do artigo"
        />
        <br />
        <label>Artigo: </label>
        <textarea
          class="form-control"
          name="body"
          placeholder="Escreva seu artigo aqui..."
          id="article"
        ></textarea>
        <br />
        <label>Categoria:</label>
        <select name="category" class="form-control">
          <% categories.forEach(category => { %>
          <option value="<%= category.id %>"><%= category.title %></option>
          <% }) %>
        </select>
        <br />
        <button class="btn btn-success">Cadastrar</button>
      </form>
    </div>
  </div>
</div>

<%- include('../../partials/footer.ejs') %>
<script src="/tinymce/tinymce.min.js"></script>

<script>
  tinymce.init({
    language: "pt_BR",
    selector: "#article",
    plugins: [
      "wordcount",
      "emoticons",
      "advlist",
      "autolink",
      "link",
      "image",
      " lists",
      "print",
      "preview",
      "hr",
      "searchreplace",
      "fullscreen",
      "insertdatetime",
      "media ",
      "save",
      "table",
      "paste",
    ],
  });
</script>
